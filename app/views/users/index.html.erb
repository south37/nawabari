<h1>Listing users</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Area</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.foursq_id %></td>
    <td><%= user.name %></td>
    <td><%= user.area %></td>
    <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
<%= link_to 'New User', users_new_path %>
